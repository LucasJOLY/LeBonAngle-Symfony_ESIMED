{% extends 'base.html.twig' %}

{% block title %}AdminUser{% endblock %}

{% block body %}
    <h1>Administrateur : </h1>

    <table class="table table-show">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ admin_user.id }}</td>
            </tr>
            <tr>
                <th>Nom d'utilisateur</th>
                <td>{{ admin_user.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ admin_user.email }}</td>
            </tr>
        </tbody>
    </table>

    <a  class="btn btn-secondary" href="{{ path('app_admin_user_index') }}">Retour</a>

    <a class="btn btn-edit" href="{{ path('app_admin_user_edit', {'id': admin_user.id}) }}">Modifier</a>

    {{ include('admin_user/_delete_form.html.twig') }}
{% endblock %}
